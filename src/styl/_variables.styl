// Wrapper site
$container = rem(1080px)

// Grid
$margin-cols = 2%
$max-cols = 12
$width-cols = (100 - ($margin-cols * ($max-cols - 1))) / $max-cols

// Colors
$white = #fff
$blue = #007fff
$grey = #7e7c7c
$lgrey = #eee
$black = #152024

$transition = all .25s ease

main-radius()
	border-bottom rem(3px) solid rgba(0,0,0,.3)
	border-radius rem(15px) 0 rem(15px) 0